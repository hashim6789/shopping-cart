<section>
  <div class="container">
    <div class="row mt-4">
      <a href="/admin/add-product" class="btn btn-success ml-auto" role="button">Add Product</a>
    </div>
    <table class="table mt-5">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">name</th>
          <th scope="col">category</th>
          <th scope="col">description</th>
          <th scope="col">Image</th>
        </tr>
      </thead>
      <tbody>
        {{#each product}}
        <tr>
          <th scope="row">1</th>
          <td>{{this.name}}</td>
          <td>{{this.category}}</td>
          <td>{{this.description}}</td>
          <td><img style="height: 50px; weight: 50px;" src="{{this.Image}}" alt=""></td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>